        <dt>
            @Html.DisplayNameFor(item => item.name)
        </dt>

        <dd>
            @Html.DisplayFor(item => item.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(item => item.price)
        </dt>

        <dd>
            @Html.DisplayFor(item => item.price)
